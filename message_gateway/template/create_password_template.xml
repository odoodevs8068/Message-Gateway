<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

     <template id="create_new_password" name="create_new_password">
            <div class="oe_structure">
                <div class="container">
                    <br/>
                    <br/>
                    <div>
                    </div>
                    <head>
                        <style>
                            *,
                            *:before,
                            *:after{
                            padding: 0;
                            margin: 0;
                            box-sizing: border-box;
                            }
                            .reset_page_form{
                            height: 550px;
                            width: 450px;
                            background-color: #ffffff14;
                            position: absolute;
                            transform: translate(-50%,-50%);
                            top: 40%;
                            left: 50%;
                            border-radius: 60px;
                            backdrop-filter: blur(10px);
                            border: 2px solid rgba(255,255,255,0.1);
                            box-shadow: 0 0 40px rgba(8,7,16,0.6);
                            padding: 50px 35px;
                            }
                            .reset_page_form *{
                            font-family: fangsong;
                            color: #6c757d;
                            letter-spacing: 0.5px;
                            outline: none;
                            border: none;
                            }
                            .reset_page_form_h3{
                            font-size: 32px;
                            font-weight: 500;
                            line-height: 42px;
                            text-align: center;
                            }

                            .reset_page_form_label{
                            display: block;
                            margin-top: 30px;
                            font-size: 16px;
                            font-weight: 500;
                            }
                            .input_field{
                            display: block;
                            height: 50px;
                            width: 100%;
                            background-color: #6c757d;
                            border-radius: 3px;
                            padding: 0 10px;
                            margin-top: 8px;
                            font-size: 14px;
                            font-weight: 300;
                            color: #ffffff;
                            }
                            ::placeholder{
                            color: #e5e5e5;
                            }
                            .custom_button{
                            margin-top: 50px;
                            width: 40%;
                            background-color: #6c757db5;
                            color: #fff;
                            padding: 15px 0;
                            font-size: 18px;
                            font-weight: 600;
                            border-radius: 240px;
                            cursor: pointer;
                            }
                            .social{
                            margin-top: 30px;
                            display: flex;
                            }
                            .social div{
                            background: red;
                            width: 150px;
                            border-radius: 3px;
                            padding: 5px 10px 10px 5px;
                            background-color: rgba(255,255,255,0.27);
                            color: #eaf0fb;
                            text-align: center;
                            }
                            .social div:hover{
                            background-color: rgba(255,255,255,0.47);
                            }
                            .social .fb{
                            margin-left: 25px;
                            }
                            .social i{
                            margin-right: 4px;
                            }

                            .back_button {
                            margin-top: -10px;
                            width: 0%;
                            background-color: #fff0;
                            color: #212529;
                            padding: 15px 0;
                            font-size: 18px;
                            font-weight: 600;
                            border-radius: 240px;
                            cursor: pointer;
                            }
                            .phone-input {
                            display: flex;
                            align-items: center;
                            }

                            .phone-input select {
                            flex: 0 0 auto;
                            display: block;
                            height: 50px;
                            width: 100px;
                            background-color: #6c757d;
                            border-radius: 3px;
                            padding: 0 10px;
                            margin-top: 8px;
                            font-size: 14px;
                            font-weight: 300;
                            color: #ffffff;
                            margin-right: 10px;
                            }
                            .phone-input input[type="text"] {
                            flex: 1;
                            }
                            option{
                            background-color: #ffffff;
                            color: black;"
                            }
                        </style>
                    </head>
                    <body style="width: 100%;height: 100%;">
                        <form class="reset_page_form" action="/create_password" method="post">
                            <button class="back_button fa fa-arrow-left"/>
                            <h3 class="reset_page_form_h3">Create New Password</h3>
                            <label class="reset_page_form_label" for="new_password">New Password</label>
                            <input class="input_field" type="text" placeholder="Enter New password...."
                                   name="new_password" id="new_password" required="required"/>

                            <label class="reset_page_form_label" for="confirm_password">Confirm Password</label>
                            <input class="input_field" type="text" placeholder="Confirm password...."
                                   name="confirm_password" id="confirm_password" required="required"/>

                            <button class="custom_button">Submit</button>
                        </form>
                    </body>
                </div>
            </div>
    </template>

    <template id="password_success" name="password_success">
            <div class="oe_structure">
                <div class="container">
                    <br/>
                    <center>
                        <h2 style="font-family: fangsong;font-size: 32px;font-weight: 500;line-height: 42px;text-align: center;">
                            Password Created SuccessFully for <span t-esc="user_id.name"/>
                        </h2>
                        <a href='/web/login'>
                            <i class="fa fa-hand-o-right"/>
                            <span style="font-family: fangsong;font-size: 20px;font-weight: 500;line-height: 42px;text-align: center;">Go To Login</span></a>
                    </center>
                    <br/>
                </div>
            </div>
    </template>

</odoo>